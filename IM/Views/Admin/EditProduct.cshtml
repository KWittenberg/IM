@using IM.Services.Interface;
@model IM.Models.ViewModel.ProductViewModel
@*@model IM.Models.Binding.ProductBinding*@
@inject IProductService productService
@{
    var productCategory = await productService.GetProductCategorysAsync();
}

<br/>
<br/>

<div class="container-fluid">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6 offset-1">
            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Edit Product</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form asp-action="EditProduct">
                    <div class="card-body">

                        <div class="form-group">
                            <label asp-for="ProductCategoryId" class="control-label">&nbsp; &nbsp; Choose a category</label>
                            <select name="ProductCategoryId" class="form-select" aria-label="Default select example">
                                @foreach (var item in productCategory)
                                {
                                    <option value="@item.Id">@item.Title</option>
                                }
                            </select>
                        </div>
                       
                        <div class="form-group">
                            <label> &nbsp; &nbsp; Title</label>
                            <input asp-for="Title" type="text" class="form-control">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label> &nbsp; &nbsp; Description</label>
                            <input asp-for="Description" type="text" class="form-control">
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label> &nbsp; &nbsp; Quantity</label>
                            <input asp-for="Quantity" type="text" class="form-control">
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label> &nbsp; &nbsp; Price</label>
                            <input asp-for="Price" type="text" class="form-control">
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer" align="right">
                        <button type="submit" class="btn btn-primary">Update</button><a asp-controller="Admin" asp-action="ProductAdministration" class="btn btn-secondary">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }