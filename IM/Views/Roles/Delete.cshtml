@model Microsoft.AspNetCore.Identity.IdentityRole
@{
    ViewData["Title"] = "Delete Role";
}

<br />
<br />

<div class="container-fluid">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6 offset-1">
            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Delete Role</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form method="post">
                    <div class="card-body">
                        <div class="form-group">
                            <label> &nbsp; &nbsp; Id</label>
                            <input asp-for="Id" readonly disabled class="form-control" />
                        </div>
                        <div class="form-group">
                            <label> &nbsp; &nbsp; Name</label>
                            <input asp-for="Name" disabled class="form-control">
                        </div>

                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer" align="right">
                        <button type="submit" class="btn btn-primary">Delete</button><a asp-controller="Roles" asp-action="Index" class="btn btn-secondary">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>