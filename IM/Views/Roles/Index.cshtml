@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Index";
    int counter = 1;
}
<br/>
<br/>
<h1>Role</h1>
<br/>

<div class="card">
    <div class="card-body p-0">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th style="width: 5%">#</th>
                <th style="width: 40%">Id</th>
                <th>Name</th>
                <th style="width: 10%"><a asp-controller="Roles" asp-action="Upsert" class="btn btn-block btn-secondary btn-sm"><i class="bi bi-plus-circle"></i> &nbsp; Add New</a></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@counter</td>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <div class="btn-group btn-group-sm">
                            <a asp-controller="Roles" asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-secondary btn-sm"><i class="bi bi-pencil-square"></i></a>
                            <a asp-controller="Roles" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-secondary btn-sm"><i class="bi bi-trash"></i></a>
                        </div>
                    </td>
                </tr>
                counter++;
            }
            </tbody>
        </table>
    </div>
</div>