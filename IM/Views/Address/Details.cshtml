@using IM.Services.Interface;
@*@model IM.Models.ViewModel.AddressViewModel*@
@model IM.Models.Dbo.Address
@inject ICustomerService customerService
@{
    ViewData["Title"] = "Details Address";
    var users = await customerService.GetApplicationUsers();
}

<!-- Details Address -->
<div class="register-login-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="login-form">
                    <h2>Details Address</h2>
                </div>
                <div class="card-body text-center">
                    <h3 class="mt-2">@Model.ApplicationUser.FirstName @Model.ApplicationUser.LastName</h3>
                    <h4 class="mt-5">@Model.Street</h4>
                    <h4 class="mt-2">@Model.PostCode @Model.City</h4>
                    <h4 class="mt-2">@Model.Country</h4>
                </div>
                <div align="center">
                    <a asp-controller="Address" asp-action="Index" class="mt-3 secondary-btn">Back</a>
                </div>

            </div>
        </div>
    </div>
</div>