@model IM.Models.ViewModel.ShoppingCartViewModel
@using Microsoft.AspNetCore.Identity
@using IM.Models.Dbo
@using IM.Services.Interface
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject ICustomerService customerService
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var user = await UserManager.GetUserAsync(User);
    var address = await customerService.GetAddress(user.Id);
    decimal totalPrice = Model.GetTotalPrice();
    decimal totalPriceWithVat = Model.GetTotalPriceWithVAT();
    int counter = 1;
}

<br/>
<br/>

<div class="container">
    <div class="card">
        <div class="card-header">Cart <strong>@Model.Id-@Model.Created.ToString("dd-MM-yyyy")</strong>
            <span class="float-right"> <strong>Status:</strong> @Model.ShoppingCartStatus.ToString()</span>

        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-sm-6">
                    <h6 class="mb-3">Kupac:</h6>
                    <div>
                        <strong>@user.FirstName @user.LastName</strong>
                    </div>
                    <div>@address.City</div>
                    <div>@address.Street</div>
                    <div>Email: @user.Email</div>
                    <div>Phone: @user.PhoneNumber</div>
                </div>
            </div>

            <div class="table-responsive-sm">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th class="center">#</th>
                            <th>Naziv</th>
                            <th>Opis</th>
                            <th class="right">Kategorija</th>
                            <th class="center">Količina</th>
                            <th class="right">Cijena</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ShoppingCartItems)
                        {
                            <tr>
                                <td class="center">@counter</td>
                                <td class="left strong">@item.Product.Title</td>
                                <td class="left">@item.Product.Description</td>
                                <td class="right">@item.Product.ProductCategory.Title</td>
                                <td class="center">@item.Quantity</td>
                                <td class="right">@item.Price</td>
                            </tr>

                            counter++;
                        }
                    </tbody>
                </table>
            </div>

            <div class="col-lg-4 col-sm-5 ml-auto">
                <table class="table table-clear">
                    <tbody>
                    <tr>
                        <td class="left">
                            <strong>Neto</strong>
                        </td>
                        <td class="right">@string.Format("{0:C}",totalPrice)</td>
                    </tr>
                    <tr>
                        <td class="left">
                            <strong>Discount (20%)</strong>
                        </td>
                        <td class="right">0</td>
                    </tr>
                    <tr>
                        <td class="left">
                            <strong>VAT (10%)</strong>
                        </td>
                        <td class="right">@string.Format("{0:C}",(totalPriceWithVat-totalPrice))</td>
                    </tr>
                    <tr>
                        <td class="left">
                            <strong>Total</strong>
                        </td>
                        <td class="right">
                            <strong>@string.Format("{0:C}",totalPriceWithVat)</strong>
                        </td>
                    </tr>
                    </tbody>
                </table>

            </div>

            @using (Html.BeginForm())
            {
                <input type="text" name="ShoppingCartId" value="@Model.Id" hidden>
                <input type="submit" class="btn btn-success" value="Kupi">
            }

        </div>
    </div>
</div>