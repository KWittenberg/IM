@using IM.Models.Dbo
@using Microsoft.AspNetCore.Identity
@using IM.Models.ViewModel
@model List<ProductViewModel>
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Home Page";
    int counter = 1;
}

<br />
<br />
<h1>ListView</h1>
<br />

<div class="card">
    <div class="card-body p-0">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th style="width: 3%">#</th>
                    <th style="width: 10%">Image</th>
                    <th style="width: 15%">Title</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th style="width: 10%"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@counter</td>
                        <td><img src="/img/1997 Rudina/1997 Rudina 11.jpg" width="100px"></td>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.Price</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a asp-controller="Shop" asp-action="ItemView" asp-route-id="@item.Id" class="btn btn-secondary">Buy Now</a>
                                @*<a href="@Url.Action("ItemView", "Shop",new {id = item.Id})" class="btn btn-success">Detalji</a>*@
                            </div>
                        </td>
                    </tr>
                    counter++;
                }
            </tbody>
        </table>
    </div>
</div>