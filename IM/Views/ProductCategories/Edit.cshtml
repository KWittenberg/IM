@model IM.Models.Dbo.ProductCategory
@{
    ViewData["Title"] = "Edit Category";

}

<br />
<br />

<div class="container-fluid">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6 offset-1">
            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Edit Category</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form method="post" asp-action="Edit">
                    <div class="card-body">
                        <div class="form-group">
                            <label> &nbsp; &nbsp; Category</label>
                            <input asp-for="Title" type="text" class="form-control">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label> &nbsp; &nbsp; Description</label>
                            <input asp-for="Description" type="text" class="form-control">
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        @*@Html.TextBoxFor(model => model.Created,new {@readonly = true, @class = "form-control readonly"})*@
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer" align="right">
                        <button type="submit" class="btn btn-primary">Update</button><a asp-controller="ProductCategories" asp-action="Index" class="btn btn-secondary">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
