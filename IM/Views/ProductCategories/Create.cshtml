@model IM.Models.Dbo.ProductCategory
@{
    ViewData["Title"] = "New Category";
}

<br />
<br />

<div class="container-fluid">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6 offset-1">
            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">New Category</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form method="post">
                    <div class="card-body">
                        <div class="form-group">
                            <label> &nbsp; &nbsp; Category</label>
                            <input asp-for="Title" type="text" class="form-control" placeholder=" category name">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label> &nbsp; &nbsp; Description</label>
                            <input asp-for="Description" type="text" class="form-control" placeholder=" category description">
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer" align="right">
                        <button type="submit" class="btn btn-primary">Create</button><a asp-controller="ProductCategories" asp-action="Index" class="btn btn-secondary">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }