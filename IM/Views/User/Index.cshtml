@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<IM.Models.Dbo.ApplicationUser>
@{
    ViewData["Title"] = "Index";
    int counter = 1;
}

<br/>
<br/>
<h1>ApplicationUser</h1>
<br/>

<div class="card">
    <div class="card-body p-0">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th style="width: 5%">#</th>
                <th style="width: 20%">User</th>
                <th>Role</th>
                <th>Email</th>
                <th style="width: 15%"><a asp-controller="User" asp-action="Create" class="btn btn-block btn-secondary btn-sm"><i class="bi bi-plus-circle"></i> &nbsp; Add New</a></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@counter</td>
                    <td>@item.FirstName @item.LastName</td>
                    <td>@item.Role</td>
                    <td>@item.Email</td>
                    <td>
                        <div class="btn-group btn-group-sm">
                            <a asp-controller="User" asp-action="Details" asp-route-userId="@item.Id" class="btn btn-secondary btn-sm"><i class="bi bi-eye"></i></a>
                            <a asp-controller="User" asp-action="Edit" asp-route-userId="@item.Id" class="btn btn-secondary btn-sm"><i class="bi bi-pencil-square"></i></a>
                            <a asp-controller="User" asp-action="Delete" asp-route-userId="@item.Id" class="btn btn-secondary btn-sm"><i class="bi bi-trash"></i></a>
                       
                           
                        
                            </div>
                    </td>
                </tr>
                counter++;
            }
            </tbody>
        </table>
    </div>
</div>
            
@await Html.PartialAsync("_CreateItem", "User")





<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">User List </h2>
    </div>
</div>
<div class="p-4 border rounded">
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    Name
                </th>
                <th>
                    Role
                </th>
                <th>
                    Email
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.FirstName @item.LastName
                    </td>
                    <td>
                        @item.Role
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        <div class="text-center">
                            <form asp-action="Delete" asp-route-userId="@item.Id">
                                <a asp-action="Edit" asp-route-userId="@item.Id" class="btn btn-info text-white" style="cursor:pointer">
                                    Edit
                                </a>

                                <a asp-action="ManageUserClaims" asp-route-userId="@item.Id" class="btn btn-primary text-white"
                           style="cursor:pointer">Claims</a>

                                @if (item.LockoutEnd == null || item.LockoutEnd < DateTime.Now)
                                {
                                    //we want to show them the option to lock
                                    <button asp-action="LockUnlock" asp-route-userId="@item.Id" class="btn btn-success text-white"
                                style="cursor:pointer">
                                        <span>&nbsp; Lock &nbsp;</span>
                                    </button>
                                }
                                else
                                {
                                    //we want to show them the option to unlock
                                    <button asp-action="LockUnlock" asp-route-userId="@item.Id" class="btn btn-warning text-white"
                                style="cursor:pointer">
                                        <span>UnLock</span>
                                    </button>
                                }

                                <button type="submit" onclick="return confirm('Are you sure you want to delete this?')"
                                class="btn btn-danger">
                                    DELETE
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </table>
    }
</div>