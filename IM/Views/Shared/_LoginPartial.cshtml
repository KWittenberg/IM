@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using IM.Models.Dbo
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    var user = await UserManager.GetUserAsync(User);
}

<ul class="navbar-nav">
    @if (user != null)
    {
        var userRoles = await UserManager.GetRolesAsync(user);

        <li class="nav-item"><a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hi @user.FirstName</a></li>

        <ul class="dropdown">
            <li class="ht-right">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link">Logout</button>
                </form>
            </li>
        </ul>
    }
    else
    {
        <a class="login-panel" asp-area="Identity" asp-page="/Account/Login">Login</a>
        <ul class="dropdown">
            <li class="ht-right"><a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a></li>
        </ul>
    }
</ul>

